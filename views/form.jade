//- index.jade
extends ./layout.jade

block content
	h1 Candidatos
	form(class='form', method="post", role="form")
		div(class="form-group")
			label(for="Candidato_nome") Nome
			input(type="text", name="Candidato[nome]", id="Candidato_nome", class="form-control", placeholder="Nome")
		div(class="form-group")
			label(for="Candidato_numero") Número
			input(type="text", name="Candidato[numero]", id="Candidato_numero", class="form-control", placeholder="Numero")
		div(class="form-group")
			label(for="Candidato_imagem") Imagem
			input(type="text", name="Candidato[imagem]", id="Candidato_imagem", class="form-control", placeholder="Imagem")
		input(type="submit", class="btn btn-default", value="Salvar")
	hr
	table(class="table")
		tr
			th Candidato
			th Número	
		-for(i in candidatos)
			tr
				td #{candidatos[i].nome}	
				td #{candidatos[i].numero}